block extraCode
	script.
		getGistFile('b2f1ba02e88646e458c5e51cbbc4b379','autocomplete_identify_bookmarklet',(code)=>{
			$('#bookmarklet').attr('href',code)
			code=code.replace(/</g,"&lt;");
			code=code.replace(/>/g,"&gt;");
			$('#javascriptExample').html(code)
			setCodeExamples();
			Prism.highlightAll();
		})


	



		