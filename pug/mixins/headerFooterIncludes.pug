mixin headIncludes(pathToRoot)
    - pathToRoot = pathToRoot || ''
    - var assetsPath = pathToRoot+"assets/css/app.css"
    - var bootstrapPath = pathToRoot+"assets/css/bootstrap.css"
    link(href=bootstrapPath rel="stylesheet")
    link(href=assetsPath rel="stylesheet")
    script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous")
    

mixin bodyIncludes(pathToRoot)
    - pathToRoot = pathToRoot || ''
    - pathToSkipTo = pathToRoot+"assets/javascript/skipto.min.js"
    - pathToJS = pathToRoot+"assets/javascript/app-min.js"
    - pathToFontAwesome = pathToRoot+"assets/fontAwesome5/js/fontawesome-all.min.js"
    
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous")
    script(src=pathToFontAwesome)
    script(src=pathToSkipTo)
    // script(src=pathToJS)
    script(src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js")
    script.
        WebFont.load({google: {families: ['Open Sans', 'Roboto', 'Poppins']} });

mixin modal
    .modal#bs4Modal(tabindex="-1" role="dialog")
        .modal-dialog(role="document")
            .modal-content
                .modal-header
                    h2.modal-title.h5
                    button.close(type="button" data-dismiss="modal" aria-label="Close")
                        |&times;
                .modal-body
                .modal-footer

mixin code(pathToRoot)
    - pathToRoot = pathToRoot || ''
    - pathToPrism = pathToRoot+"assets/prism/"
    - pathToPrismJS = pathToPrism+"prism.js"
    - pathToPrismCSS = pathToRoot+"assets/css/prism-complete.css"
    - pathToJS = pathToRoot+"assets/javascript/code.js"
    script(src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/2.0.1/clipboard.min.js" integrity="sha256-hIvIxeqhGZF+VVeM55k0mJvWpQ6gTkWk3Emc+NmowYA=" crossorigin="anonymous")
    script(src=pathToPrismJS)
    link(href=pathToPrismCSS rel="stylesheet")
    script(src=pathToJS)

mixin footer(pathToRoot)
    - pathToRoot = pathToRoot || ''
    - pathToAbout = pathToRoot+"about/index.html"
    - pathToAboutSite = pathToRoot+""
    footer
